<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label>名前:</label>
    <%= f.text_field :name, class:"form-control", placeholder:"name is here"%>
  </div>
  <div class="form-group" >
    <label>内容:</label>
    <%= f.text_area :body, class:"form-control", placeholder:"content is here" %>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>