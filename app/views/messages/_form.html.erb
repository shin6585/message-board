<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-1 control-label" for="name">名前:</label>
      <div class="col-sm-11">
        <%= f.text_field :name, id:"name", class: "form-control", placeholder:"name is here"%>
      </div>
    </div>
    <div class="form-group" >
      <label class= "col-sm-1 control-label" for="content">内容:</label>
      <div class="col-sm-11">
      <%= f.text_area :body,  class: "form-control", id:"content", placeholder:"content is here" %>
      </div>
    </div>
  </div>
    <%= f.submit class: "btn btn-sm btn-primary" %>
  <% end %>
